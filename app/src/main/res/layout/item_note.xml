<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"

    android:layout_margin="10dp"
    android:background="@drawable/back_item"
    android:minHeight="140dp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/prorety"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:strokeWidth="1dp"
        android:padding="0.7dp"
        android:background="#D10606"
        app:strokeColor="#B1B0B0"
        android:layout_margin="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circkeImageView" />


    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:gravity="end"
        android:text="20:20"
        android:textColor="#767676"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/prorety"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/prorety"
        app:layout_constraintTop_toTopOf="@+id/prorety" />


    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Isystem Academy"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prorety" />


    <TextView
        android:layout_width="0dp"
        android:layout_marginHorizontal="18sp"
        app:layout_constraintVertical_bias="0.2"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:maxLines="2"
        android:textSize="14sp"
        android:text="b[weifbe pIEFBIWEBEWIPFBUWUIF WIECBWIEUB[WB[b vbivurev;'wn'vi'bwib[wibewiubfu"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/subTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

</androidx.constraintlayout.widget.ConstraintLayout>